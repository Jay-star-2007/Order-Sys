<view class="pay-result"><view class="result-animation"><view class="{{['circle',payStatus?'success':'fail']}}"><view class="icon"><block wx:if="{{payStatus}}"><text class="success-icon">✓</text></block><block wx:else><text class="fail-icon">✕</text></block></view></view></view><view class="result-text"><text class="status">{{payStatus?'支付成功':'支付失败'}}</text><text class="amount">{{"￥"+amount}}</text><text class="tips">{{payStatus?'感谢您的惠顾':'请重新尝试支付'}}</text></view><view class="order-info"><view class="info-item"><text class="label">订单编号</text><text class="value">{{orderNo}}</text></view><view class="info-item"><text class="label">支付时间</text><text class="value">{{payTime}}</text></view></view><view class="bottom-btns"><button data-event-opts="{{[['tap',[['backToHome',['$event']]]]]}}" class="btn primary" bindtap="__e">返回首页</button><block wx:if="{{!payStatus}}"><button data-event-opts="{{[['tap',[['retryPay',['$event']]]]]}}" class="btn outline" bindtap="__e">重新支付</button></block></view><block wx:if="{{payStatus}}"><view class="recommendations"><text class="rec-title">店长推荐</text><scroll-view class="rec-list" scroll-x="{{true}}"><block wx:for="{{recommendations}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="rec-item"><image src="{{baseUrl+'/image/dish/'+item.image}}" mode="aspectFill"></image><text class="dish-name">{{item.name}}</text><text class="dish-price">{{"￥"+item.price}}</text></view></block></scroll-view></view></block></view>